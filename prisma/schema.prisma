datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  image       String
  order       Int
  basePrise   Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  sizes       Size[]
}

model Size {
  id        String  @id @default(cuid())
  name      String
  price     Float
  product   Product @relation(fields: [productId], references: [id])
  productId String
}

